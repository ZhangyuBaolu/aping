<idea-plugin version="2">
  <id>com.github.lwfwind.automation.plugin.aping</id>
  <name>aping</name>
  <version>1.0</version>
  <vendor email="lwfwind@gmail.com" url="https://github.com/lwfwind/smart-api-framework">lwfwind</vendor>

  <description><![CDATA[
      execute run/debug test from xml more convenient for automation project based on smart-api-framework <br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      1.0 add run/debug to EditorPopupMenu<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="EditorRunTestCase" class="com.automation.aping.EditorRunTestCase" icon="AllIcons.Toolwindows.ToolWindowRun"
            description="run test case from xml">
      <add-to-group group-id="EditorPopupMenu"/>
      <add-to-group group-id="EditorTabPopupMenu"/>
    </action>

    <action id="EditorDebugTestCase" class="com.automation.aping.EditorDebugTestCase" icon="AllIcons.Toolwindows.ToolWindowDebugger"
            description="debug test case from xml">
      <add-to-group group-id="EditorPopupMenu"/>
      <add-to-group group-id="EditorTabPopupMenu"/>
    </action>

    <action id="ProjectViewRunTestSuite" class="com.automation.aping.ProjectViewRunTestSuite" icon="AllIcons.Toolwindows.ToolWindowDebugger"
            text="Run test suite" description="run test suite from project view">
      <add-to-group group-id="ProjectViewPopupMenu"/>
    </action>

    <action id="ProjectViewDebugTestSuite" class="com.automation.aping.ProjectViewDebugTestSuite" icon="AllIcons.Toolwindows.ToolWindowDebugger"
            text="Debug test suite" description="debug test suite from project view">
      <add-to-group group-id="ProjectViewPopupMenu"/>
    </action>

  </actions>

</idea-plugin>